<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= typeof title !== 'undefined' ? title : 'Posts App' %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="bg-gray-50 text-gray-900">
    <div class="max-w-3xl mx-auto py-8 px-4">
      <header class="mb-6 flex items-center justify-between">
        <a href="/posts" class="text-2xl font-bold tracking-tight text-gray-900">Posts</a>
        <a href="/posts/new" class="inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2">New Post</a>
      </header>
      <main class="bg-white shadow-sm ring-1 ring-gray-200 rounded-lg p-5">
        <%- body %>
      </main>
    </div>
  </body>
  </html>


