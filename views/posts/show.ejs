<% const title = post.title; %>
<article>
  <h2 class="text-xl font-semibold text-gray-900"><%= post.title %></h2>
  <p class="mt-2 text-gray-700"><%= post.content || 'No content' %></p>
  <p class="mt-2 text-xs text-gray-500">Created: <%= new Date(post.createdAt).toLocaleString() %></p>
  <div class="mt-4 flex items-center gap-3">
    <a href="/posts/<%= post.id %>/edit" class="text-sm text-blue-600 hover:underline">Edit</a>
    <form action="/posts/<%= post.id %>/delete" method="post" onsubmit="return confirm('Delete this post?');">
      <button type="submit" class="inline-flex items-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-red-600 focus:ring-offset-2">Delete</button>
    </form>
  </div>
  <p><a href="/posts">Back</a></p>
</article>


