<% const title = post.title; %>
<article>
  <h2 class="text-xl font-semibold text-gray-900"><%= post.title %></h2>
  <p class="mt-2 text-gray-700"><%= post.content || 'No content' %></p>
  <p class="mt-2 text-xs text-gray-500">Created: <%= new Date(post.createdAt).toLocaleString() %></p>
  <p class="mt-4"><a href="/posts">Back</a></p>
</article>


